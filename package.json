{
  "name": "@rb/monorepo",
  "version": "0.1.0",
  "description": "Main monorepo for all @rb apps and libs",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/data/*",
    "packages/docs",
    "packages/libs/*"
  ],
  "scripts": {
    "docs": "node scripts/watch-docs.js & lerna run --parallel --stream docs",
    "docs:prod": "lerna run docs:prod",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lerna:run": "lerna run",
    "lint": "eslint --ext js,ts,tsx,mdx .",
    "lint:mdx": "eslint -c .eslintrc.js --ext mdx .",
    "reset": "node scripts/node-reset.js",
    "next-dev": "lerna run --parallel --stream dev",
    "start": "lerna run start",
    "test": "lerna run test"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "rambda": "^6.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/register": "^7.13.16",
    "@babel/core": "7.14.2",
    "@babel/node": "7.14.2",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@octokit/core": "^3.4.0",
    "@types/fs-extra": "^9.0.11",
    "@types/styled-components": "^5.1.9",
    "@types/styled-system": "^5.1.11",
    "@types/jest": "^26.0.23",
    "@types/nodemon": "^1.19.0",
    "chokidar": "^3.5.1",
    "fork-ts-checker-webpack-plugin": "^6.2.6",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
