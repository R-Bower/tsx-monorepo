{
  "name": "@rb/monorepo",
  "description": "Main monorepo for all @rb apps and libs",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/data/*",
    "packages/libs/*"
  ],
  "scripts": {
    "dev": "lerna run dev",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "docs": "npm --workspace @rb/react-components run docs",
    "lint": "eslint --ext js,ts,tsx,mdx .",
    "lint:mdx": "eslint -c .eslintrc.js --ext mdx .",
    "pub": "lerna publish",
    "reset": "node scripts/node-reset.js",
    "next-dev": "lerna run dev --parallel --stream",
    "storybook": "npm --workspace @rb/react-components run storybook",
    "styleguide": "npm --workspace @rb/react-components run styleguidist:dev",
    "start": "lerna run start",
    "test": "lerna run test"
  },
  "dependencies": {
    "rambda": "^6.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@octokit/core": "^3.4.0",
    "@rb/eslint-config": "*",
    "@types/jest": "^26.0.23",
    "fork-ts-checker-webpack-plugin": "^6.2.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}
