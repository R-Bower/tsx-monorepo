{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "paths": {
      "@rb/react-components": ["../libs/react-components"],
      "@rb/react-hooks": ["../libs/react-hooks"],
      "@rb/react-style-system": ["../libs/react-style-system"],
      "~assets/*": ["./src/assets/*"],
      "~components/*": ["./src/components/*"],
      "~lib/*": ["src/lib/*"],
      "~pages/*": ["./src/pages/*"],
      "~props/*": ["./src/props/*"],
      "~redux/*": ["./src/redux/*"],
      "~routes/*": ["./src/routes/*"],
      "~utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "mdx.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../../node_modules/@types/jest/index.d.ts",
    "../../../node_modules/jest-dom"
  ]
}
