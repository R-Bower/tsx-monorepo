{
  // https://json.schemastore.org/tsconfig
  "extends": "../../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "module": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "esnext",
    "paths": {
      "@rb/*": ["../../libs/*"],
      "~*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
