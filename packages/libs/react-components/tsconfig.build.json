{
  // https://json.schemastore.org/tsconfig
  "extends": "../../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "esnext",
    "paths": {
      "@rb/react-style-system": ["../react-style-system"],
      "~components/*": ["./src/components/*"],
      "~primitives/*": ["./src/primitives/*"],
      "~test/*": ["./src/test/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist"]
}
