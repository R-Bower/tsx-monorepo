{
  "name": "@rb/react-style-system",
  "description": "Primitive React components with built-in props for CSS styles.  Based on styled-components and styled-system",
  "version": "0.9.0",
  "main": "dist/index",
  "types": "dist/index",
  "sideEffects": false,
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "docs": "yarn run watch",
    "dev": "yarn run watch",
    "next-dev": "yarn run watch",
    "show-config": "tsc --showConfig",
    "prepublishOnly": "yarn run build",
    "watch": "tsc -p tsconfig.build.json -w --preserveWatchOutput"
  },
  "dependencies": {
    "react-is": "^17.0.2"
  },
  "devDependencies": {
    "@styled-system/prop-types": "^5.1.5",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@types/styled-system": "^5.1.11",
    "csstype": "^3.0.8",
    "tslib": "^2.2.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "styled-components": "*",
    "styled-system": "*"
  }
}
